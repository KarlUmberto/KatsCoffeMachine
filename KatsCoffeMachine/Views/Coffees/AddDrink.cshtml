@model KatsCoffeMachine.Models.Coffee

@{
    ViewData["Title"] = "AddDrink";
}

<h1>Add Drink</h1>

<h4>Coffee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDrink">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CoffeeTypeId" class="control-label"></label>
                <select asp-for="CoffeeTypeId" class="form-control" asp-items="ViewBag.CoffeeTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CupsInPackage" class="control-label"></label>
                <input asp-for="CupsInPackage" class="form-control" />
                <span asp-validation-for="CupsInPackage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Orders">Go to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
